{
  "apps": [
    {
      "name": "placedin-server",
      "script": "index.js",
      "cwd": "./server",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "max_memory_restart": "1G",
      "node_args": [
        "--optimize-for-size",
        "--max-old-space-size=1024"
      ],
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "watch": false,
      "ignore_watch": ["node_modules", "logs"],
      "kill_timeout": 5000
    }
  ]
}
